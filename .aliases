# Easy way to extract archives
extract () {
   if [ -f $1 ] ; then
       case $1 in
           *.tar.bz2)   tar xvjf $1;;
           *.tar.gz)    tar xvzf $1;;
           *.bz2)       bunzip2 $1 ;;
           *.rar)       unrar x $1 ;;
           *.gz)        gunzip $1  ;;
           *.tar)       tar xvf $1 ;;
           *.tbz2)      tar xvjf $1;;
           *.tgz)       tar xvzf $1;;
           *.zip)       unzip $1   ;;
           *.Z)         uncompress $1  ;;
           *.7z)        7z x $1;;
           *) echo "don't know how to extract '$1'..." ;;
       esac
   else
       echo "'$1' is not a valid file!"
   fi
}

# Find files with extension
# Usage: fext <ext> [max_depth]
fext() {
  if [ -z "${2}" ]; then
      find . -type f -name "*.${1}"
	else
	    find . -maxdepth "${2}" -type f -name "*.${1}"
	      fi
	      }

	      # Find file/directory by substring
	      # Usage: fn <substring> [max_depth]
	      fn() {
		if [ -z "${2}" ]; then
		    find . -iname "*${1}*"
		      else
			  find . -maxdepth "${2}" -iname "*${1}*"
			    fi
			    }

